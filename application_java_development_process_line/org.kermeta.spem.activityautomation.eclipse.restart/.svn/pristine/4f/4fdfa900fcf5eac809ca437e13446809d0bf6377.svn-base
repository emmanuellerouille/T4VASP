package org.kermeta.spem.activityautomation.eclipse.restart;

import org.eclipse.ui.PlatformUI;
import org.kermeta.spem.activityautomationmanager.ActivityAutomation;

public class RestartEclipse implements ActivityAutomation {

	public RestartEclipse() {
		// TODO Auto-generated constructor stub
	}

	@Override
	public void run(String contextModelPath) {
		PlatformUI.getWorkbench().getPreferenceStore().setValue("process execution", true);

		PlatformUI.getWorkbench().restart();
	}

}
