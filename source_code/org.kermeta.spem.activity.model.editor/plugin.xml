<plugin>

   <extension point="org.eclipse.ui.newWizards">
      <category
            id="org.eclipse.emf.ecore.Wizard.category.ID"
            name="%_UI_Wizard_category"/>
      <wizard
            id="org.kermeta.spem.activity.presentation.ActivityModelWizardID"
            name="%_UI_ActivityModelWizard_label"
            class="org.kermeta.spem.activity.presentation.ActivityModelWizard"
            category="org.eclipse.emf.ecore.Wizard.category.ID"
            icon="icons/full/obj16/ActivityModelFile.gif">
         <description>%_UI_ActivityModelWizard_description</description>
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
   </extension>

   <extension point="org.eclipse.ui.editors">
      <editor
            id="org.kermeta.spem.activity.presentation.ActivityEditorID"
            name="%_UI_ActivityEditor_label"
            icon="icons/full/obj16/ActivityModelFile.gif"
            extensions="activity"
            class="org.kermeta.spem.activity.presentation.ActivityEditor"
            contributorClass="org.kermeta.spem.activity.presentation.ActivityActionBarContributor">
      </editor>
   </extension>

</plugin>
