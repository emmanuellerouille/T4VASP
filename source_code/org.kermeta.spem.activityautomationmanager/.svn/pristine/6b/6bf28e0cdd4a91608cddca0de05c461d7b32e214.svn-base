package org.kermeta.spem.activityautomationmanager;

import org.eclipse.core.runtime.IConfigurationElement;
import org.eclipse.core.runtime.IExtension;
import org.eclipse.core.runtime.Platform;

public class BehaviorExecution {
	
	public static void behaviorExecution(String action, String contextFilePath){
		
		System.out.println("Call to org.kermeta.spem.activityautomationmanager.BehaviorExecution.behaviorExecution");
		
		//Find the class, among those extending the activityautomation extension point, whose action equals action and execute its behavior operation
		IExtension[] extensions = Platform.getExtensionRegistry().getExtensionPoint("activityautomationregistry").getExtensions();
		for(int i = 0; i < extensions.length; i++){
			IConfigurationElement[] configElements = extensions[i].getConfigurationElements();
			for(int j = 0; j < configElements.length; j++){
				System.out.println(configElements[j]);
			}

		}

	}
}
