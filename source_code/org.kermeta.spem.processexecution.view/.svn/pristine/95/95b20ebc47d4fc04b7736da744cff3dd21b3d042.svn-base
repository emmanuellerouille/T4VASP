<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.kermeta.spem</groupId>
    <artifactId>spem.processexecution.view</artifactId>
    <version>2.0.1-SNAPSHOT</version>
    <name>spem.processexecution.view</name>
    <packaging>bundle</packaging>
   
    <parent>
        <groupId>org.kermeta.language</groupId>
        <artifactId>language.root</artifactId>
        <version>2.0.5-SNAPSHOT</version>
    </parent>
   
    <build>
        <sourceDirectory>src/main/java</sourceDirectory>
        <resources>
            <resource>
                <directory>.</directory>
                <includes>
                    <include>plugin.properties</include>
                    <include>plugin.xml</include>
                </includes>
            </resource>
            <resource>
                <directory>org.kermeta.spem.processexecution.view</directory>
                <targetPath>src/main/java/org.kermeta.spem.processexecution.view</targetPath>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <argLine>-Xmx1024m</argLine>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>

                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>org.kermeta.${project.artifactId};singleton:=true</Bundle-SymbolicName>
                        <Bundle-ManifestVersion>2</Bundle-ManifestVersion>
                        <Bundle-Version>${bundle.version}</Bundle-Version>
                        <Bundle-Activator>org.kermeta.spem.processexecution.view.Activator</Bundle-Activator>
                        <Export-Package>org.kermeta.spem.processexecution.view.*</Export-Package>
                        <Require-Bundle>
                        	org.eclipse.core.runtime,
                        	org.eclipse.ui,
                        	org.eclipse.core.resources,
                        	org.eclipse.emf,
                        	org.eclipse.emf.ecore,
                        	org.eclipse.emf.ecore.xmi,
                        	org.kermeta.spem.executioncontext.model,
                        	org.kermeta.spem.execution.taskuse
                        </Require-Bundle>
                        <Ignore-Package>
                        	!*
                        </Ignore-Package>
                        <Bundle-ClassPath>.</Bundle-ClassPath>
                    </instructions>
                </configuration>
            </plugin>
            <!-- copy generated MANIFEST in the project for eclipse user -->
             <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>truezip-maven-plugin</artifactId>
                <version>1.0</version>
                <executions>
                    <execution>
                        <id>copy-out-files</id>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <phase>install</phase>
                        <configuration>
                            <files>
                                <file>
                                    <source>${project.build.outputDirectory}/META-INF/MANIFEST.MF</source>
                                    <outputDirectory>${project.basedir}/META-INF</outputDirectory>
                                </file>
                            </files>
                        </configuration>
                    </execution>

                </executions>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
        	<groupId>org.eclipse</groupId>
        	<artifactId>ui</artifactId>
        	<version>3.7.0-v20110928-1505</version>
        	<exclusions>
        		<exclusion>
          			<groupId>org.eclipse.core</groupId>
          			<artifactId>runtime</artifactId>
        		</exclusion>
      		</exclusions> 
        </dependency>
        <dependency>
        	<groupId>org.eclipse.core</groupId>
        	<artifactId>runtime</artifactId>
        	<version>3.7.0-v20110110</version>
        	<exclusions>
        		<exclusion>
          			<groupId>org.eclipse</groupId>
          			<artifactId>ui</artifactId>
        		</exclusion>
        	</exclusions>
        </dependency>
        <dependency>
        	<groupId>org.eclipse.core</groupId>
        	<artifactId>resources</artifactId>
        	<version>3.7.101-v20120125-1505</version>
        </dependency>
        <dependency>
        	<groupId>org.eclipse</groupId>
        	<artifactId>draw2d</artifactId>
        	<version>3.7.2-v20111017-2020</version>
        </dependency>
        <dependency>
        	<groupId>org.eclipse</groupId>
        	<artifactId>emf</artifactId>
        	<version>2.6.0-v20120130-0943</version>
        </dependency>
        <dependency>
        	<groupId>org.eclipse.emf</groupId>
        	<artifactId>ecore</artifactId>
        	<version>2.7.0-v20120127-1122</version>
        </dependency>
        <dependency>
        	<groupId>org.eclipse.swt.gtk.linux</groupId>
        	<artifactId>x86_64</artifactId>
        	<version>3.7.2-v3740f</version>
        </dependency>
        <dependency>
        	<groupId>org.kermeta.spem.executioncontext</groupId>
        	<artifactId>spem.executioncontext.model</artifactId>
        	<version>2.0.1-SNAPSHOT</version>
        </dependency>
        <dependency>
        	<groupId>org.kermeta.spem.execution</groupId>
        	<artifactId>spem.execution.taskuse</artifactId>
        	<version>2.0.1-SNAPSHOT</version>
        </dependency>
        <dependency>
        	<groupId>org.eclipse.emf.ecore</groupId>
        	<artifactId>xmi</artifactId>
        	<version>2.7.0-v20120127-1122</version>
        </dependency>
    </dependencies>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
</project>

